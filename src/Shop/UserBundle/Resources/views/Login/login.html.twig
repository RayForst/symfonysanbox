{% extends 'WebBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite' output='css/*.css'
    'bundles/user/css/user.scss'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block content %}

    {% if error %}
        <div class="alert">{{ error.message | trans }}</div>
    {% endif %}
    <div class="form-wrapper">
        <form action="{{ path('login_check') }}" method="post">
            <label for="username">Username:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username" />

            <label for="password">Password:</label>
            <input type="password" id="password" name="_password" placeholder="Password"/>
            <label class="checkbox">
                <input type="checkbox"> Check me out
            </label>
            {#
                If you want to control the URL the user is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <button type="submit" class="btn">Enter</button>
        </form>
    </div>

{% endblock %}

